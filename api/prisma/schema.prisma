generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(uuid()) @db.Uuid
  firstName String
  lastName  String
  email     String @unique
  password  String

  backAccounts BackAccount[]
  categories   Category[]

  @@map("users")
}

enum BanckAccountType {
  CHECKING
  INVESTMENT
  CASH

  @@map("back_account_type")
}

model BackAccount {
  id             String           @id @default(uuid()) @db.Uuid
  userId         String           @map("user_id") @db.Uuid
  name           String
  initialBalance Float            @map("initial_balance")
  type           BanckAccountType
  color          String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("back_accounts")
}

enum TransactionType {
  INCOME
  EXPENSE

  @@map("transaction_type")
}

model Category {
  id     String          @id @default(uuid()) @db.Uuid
  userId String          @map("user_id") @db.Uuid
  name   String
  icon   String
  type   TransactionType

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("categories")
}
